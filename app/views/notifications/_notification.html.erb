
<li class="mt-4 border-t">
  <%= link_to  notification.to_notification.url do %>
    <div>
      <p class="text-3xl text-gray-700">
        <%= notification.to_notification.message %>
      </p>
      <div class="flex justify-between mt-1 space-x-4 text-sm text-gray-500">
        <p>
          Received on <%= notification.created_at.to_date %>
        </p>
      </div>
    </div>
  <% end %>
</li>
