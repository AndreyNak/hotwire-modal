<div class="relative bg-white">
  <div class="px-6 mx-auto max-w-7xl">
    <div class="flex items-center justify-between py-6 border-b-2 border-gray-100 md:justify-start md:space-x-10">
      <div class="flex items-center justify-start lg:w-0 lg:flex-1">
        <%= link_to root_path do %>
          <span class="sr-only">Chats</span>
          <img class="w-auto h-8 sm:h-10" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="">
          <%= link_to 'Dashboard', root_path, class: "text-base font-medium ml-5 text-gray-500 whitespace-nowrap hover:text-gray-900" %>
          <%= link_to 'Chats', chats_path, class: "text-base font-medium ml-5 text-gray-500 whitespace-nowrap hover:text-gray-900" %>
        <% end %>
      </div>
      <div class="items-center justify-end hidden md:flex md:flex-1 lg:w-0">
        <% if user_signed_in? %>
          <div class="mr-10 text-gray-500">
            <%= current_user.email%>
          </div>
          <%= link_to 'Log out', destroy_user_session_path, data: { turbo_confirm: "Are you sure?" }, data: { turbo_method: :delete }, class: "text-base font-medium text-gray-500 whitespace-nowrap hover:text-gray-900" %>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path, class: "text-base font-medium text-gray-500 whitespace-nowrap hover:text-gray-900" %>
          <%= link_to 'Sign up', new_user_registration_path, class: "inline-flex items-center justify-center px-4 py-2 ml-8 text-base font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm whitespace-nowrap hover:bg-indigo-700" %>
        <% end %>
      </div>
    </div>
  </div>
</div>